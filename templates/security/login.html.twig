{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}
    <form method="Post">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous etes connecter avec {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se deconnecter</a>
            </div>
        {% endif %}

        <div class="row justify-content-center">
            <div class="col-4">
                <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                <div class="mt-3">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me </input>
                        </label>
       

       
                        <button class="btn btn-secondary" type="submit">connexion</button>
                    </div>
                </div>

            </div>
        </div>



        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}

    </form>
{% endblock %}
