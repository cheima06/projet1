{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Articles</h1>

    {#% include "flash.html.twig" %#}
    


    <div class="col-md-10 mx-auto">

    <h1>{{ article.titre }} </h1>
        {% if article.photo is empty%}
                        <img class="col-md-3" src="{{ asset('build/images/default.webp') }}" alt="{{article.titre}}" titre="{{article.titre}}">
        {% else %}
                        <img class="col-md-3" src="{{ asset('build/images/' ~ article.photo)}}" alt="{{article.titre}}" titre="{{article.titre}}">
        {% endif %}
        
    <p> {{ article.description }} </p>
    <p>Date: {{ article.date|date('d/m/Y ') }}</p>



    <a class="btn btn-info" href="{{ path('app_article_index') }}">Retour Ã  la liste</a>

     {% if app.user and 'ROLE_ADMIN' in app.user.getroles()  %}

        <a class="btn btn-primary" href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier</a>
        {{ include('article/_delete_form.html.twig') }}
    {% endif %}


    {#{ include('commentaire/show.html.twig') }}

    {% if app.user is not null %}
        {{ include('commentaire/index.html.twig') }}
    {% endif %#}

{% endblock %}
