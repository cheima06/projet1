{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialiser votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail, et nous vous enverrons un
                Cliquez ici pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary" aria-label="envoyer email de reinitialisation de mot de passe">Envoyer un courriel de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
